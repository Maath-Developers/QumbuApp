@{
    Layout = "_Walk-in-Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Horizontal Container Alignment</title>
    <style>
        /* Custom CSS for container alignment */
        .container {
            display: flex;
            justify-content: center; /* Horizontally center the containers */
            align-items: center; /* Vertically center the containers (optional) */
            height: 100vh; /* Adjust the height as needed */
        }

        /* Optional: Style for the container elements */
        .box {
            width: 200px;
            height: 100px;
            background-color: #e0e0e0;
            text-align: center;
            padding: 20px;
            margin: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="box">Container 1</div>
        <div class="box">Container 2</div>
        <div class="box">Container 3</div>
        <div class="box">Container 4</div>
    </div>
</body>
</html>















