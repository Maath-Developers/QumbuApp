@model Qumbu_Community_Health_Care_Center.Models.UltrasoundAppointment

@{
    ViewData["Title"] = "Create";
    Layout = "/Views/Shared/_PreNatalCareLayout.cshtml";
}
<form asp-action="CreateUltrasoundAppointment" enctype="multipart/form-data" method="post">
    <div class="border p-4 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Ultrasound and Images</h2>
            <hr />
        </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <br /> <br />
        <div class="mb-3">
            <label asp-for="UserId" class="control-label"></label>
            <input asp-for="UserId" class="form-control" />
            <span asp-validation-for="UserId" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="AppointmentDate" class="control-label"></label>
            <input type="date" asp-for="AppointmentDate" class="form-control" />
            <span asp-validation-for="AppointmentDate" class="text-danger"></span>

        </div>
        <div class="mb-3">
             <label asp-for="GestationalAgeWeeks" class="control-label"></label>
             <input type="week" asp-for="GestationalAgeWeeks" class="form-control" />
             <span asp-validation-for="GestationalAgeWeeks" class="text-danger"></span>

        </div>
        <div class="mb-3">
             <label asp-for="FetalHeartRate" class="control-label"></label>
             <input type="number" asp-for="FetalHeartRate" class="form-control" />
             <span asp-validation-for="FetalHeartRate" class="text-danger"></span>

        </div>
        <div class="mb-3">
             <label asp-for="Observations" class="control-label"></label>
             <input asp-for="Observations" class="form-control" />
             <span asp-validation-for="Observations" class="text-danger"></span>

        </div>
        <div class="mb-3">
             <label asp-for="GenderDetermined" class="control-label"></label>
             <input type="text" asp-for="GenderDetermined" class="form-control" />
             <span asp-validation-for="GenderDetermined" class="text-danger"></span>

        </div>
        <div class="mb-3">
             <label asp-for="Comments" class="control-label"></label>
             <input asp-for="Comments" class="form-control" />
        </div>
        <div class="mb-3">
             <label asp-for="ImageFile" class="control-label"></label>
             <input type="file" asp-for="ImageFile" class="form-control" />
             <span asp-validation-for="ImageFile" class="text-danger"></span>

        </div>
        @* <div class="form-group">
                <label asp-for="FileName" class="control-label"></label>
                <input asp-action="FileName" class="form-control" />
            </div>*@
        <div class="mb-3">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-controller="PrenatalCare" asp-action="IndexUltrasoundAppointment" class="btn btn-danger" style="width:150px">Back to List</a>
        </div>
    </div>
           
</form>

