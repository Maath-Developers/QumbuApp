@model IEnumerable<Qumbu_Community_Health_Care_Center.Models.HealthRecord>


@{
    Layout = "/Views/Shared/_Landing2.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Health Records</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="PrenatalCare" asp-action="CreateRecord" class="btn btn-primary">Add Health Record</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        User Name
                    </th>
                    <th>
                        Recorded Date
                    </th>
                    <th>
                        Weight
                    </th>
                    <th>
                        Blood Pressure Systolic
                    </th>
                    <th>
                        Blood Pressure Diastolic
                    </th>
                    <th>
                        Sympthons
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var healthRecord in Model)
                {
                    <tr>
                        <td width="20%">@healthRecord.UserId</td>
                        <td width="20%">@healthRecord.RecordedDate</td>
                        <td width="10%">@healthRecord.Weight</td>
                        <td width="20%">@healthRecord.BloodPressureSystolic</td>
                        <td width="20%">@healthRecord.BloodPressureDiastolic</td>
                        <td width="10%">@healthRecord.Symptoms</td>
                        @*<td width="10%">*@
                        @*<div class="w-100 btn-group" role="group">
                @*    <a asp-controller="Expense" asp-action="Update" asp-route-ID="@healthRecord.ID" class="btn btn-primary mx-1">Update</a>
                <a asp-controller="Expense" asp-action="Delete" asp-route-ID="@healthRecord.ID" class="btn btn-danger mx-1">Delete</a>*@
                        @*</div>*@
                        @*</td>*@

                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Expenses created yet</p>
    }
</div>



