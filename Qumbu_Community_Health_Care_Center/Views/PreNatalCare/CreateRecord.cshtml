@using Qumbu_Community_Health_Care_Center.Areas.Identity.Data;

@model Qumbu_Community_Health_Care_Center.Models.HealthRecord

@{
    //ViewData["Title"] = "Index";
    Layout = "/Views/Shared/_LayoutPrenatal.cshtml";
}
<div class="container">
    <br />
    <br />
    <div class="bg-info p-3 mb-2">
        <h4 class="text-white text-center">Add New Health Record</h4>
    </div>
    
    <br />
    <br />
    <form method="post" asp-action="CreateRecord">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="PatientID" class="control-label">Choose Patient</label>
            <select asp-for="PatientID" class="form-control">
                @foreach (ApplicationUser item in ViewBag.Patients)
                {
                    <option value="@item.Id">@item.FirstName @item.LastName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="RecordedDate"></label>
            <input asp-for="RecordedDate" class="form-control" />
            <span asp-validation-for="RecordedDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Weight"></label>
            <input asp-for="Weight" class="form-control" />
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="BloodPressureSystolic"></label>
            <input asp-for="BloodPressureSystolic" class="form-control" />
            <span asp-validation-for="BloodPressureSystolic" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="BloodPressureDiastolic"></label>
            <input asp-for="BloodPressureDiastolic" class="form-control" />
            <span asp-validation-for="BloodPressureDiastolic" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="Temperature"></label>
            <input asp-for="Temperature" class="form-control" />
            <span asp-validation-for="Temperature" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="Symptoms" class="control-label"></label>
            <select asp-for="Symptoms" class="form-control">
                <option value="">Select</option>
                <option>Fausea</option>
                <option>Fatigue</option>
                <option>Contractions</option>
                <option>Cramping</option>
                <option>Missed Period</option>
                <option>Frequent Urination</option>
            </select>
            <span asp-validation-for="Symptoms" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-info" style="width:150px">Create</button>
        <a asp-controller="PrenatalCare" asp-action="IndexRecord" class="btn btn-danger" style="width:150px">Back to List</a>
        <div />

</form>
</div>



