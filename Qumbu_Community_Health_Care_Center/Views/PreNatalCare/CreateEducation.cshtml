@using Qumbu_Community_Health_Care_Center.Areas.Identity.Data;
@model Qumbu_Community_Health_Care_Center.Models.PrenatalEducation

@{
    ViewData["Title"] = "CreateEducation";
    Layout = "/Views/Shared/_LayoutPrenatal.cshtml";
}
@if (User.IsInRole("Nurse"))
{
    <div class="border p-6">
        <br />
        <div class="row ">
            <h1 class="display-4 text-center">Create Prenatal Education</h1>
        </div>
        <br />

        @*<hr />*@
        <div class="row">
            <div class="col-md-12">
                <form asp-action="CreateEducation" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="PatientID" class="control-label">Choose Patient</label>
                        <select asp-for="PatientID" class="form-control">
                            @foreach (ApplicationUser item in ViewBag.Patients)
                            {
                                <option value="@item.Id">@item.FirstName @item.LastName</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Category" class="control-label"></label>
                        <input asp-for="Category" class="form-control" />
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Author" class="control-label"></label>
                        <input asp-for="Author" class="form-control" />
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PublishDate" class="control-label"></label>
                        <input asp-for="PublishDate" class="form-control" />
                        <span asp-validation-for="PublishDate" class="text-danger"></span>
                    </div>
                    @*<div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
                </div>*@
                    <div class="mb-3">
                        <label asp-for="CoverImage" class="control-label"></label>
                        <input type="file" asp-for="CoverImage" class="form-control" />
                        <span asp-validation-for="CoverImage" class="text-danger"></span>

                    </div>
                    <div class="mb-3">
                        <label asp-for="ContentPdf" class="control-label"></label>
                        <input type="file" asp-for="ContentPdf" class="form-control" />
                        <span asp-validation-for="ContentPdf" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a asp-controller="PrenatalCare" asp-action="IndexEducation" class="btn btn-danger" style="width:150px">Back to List</a>

                    </div>
                </form>
            </div>
        </div>

        @*<div>
    <a asp-action="IndexEducation">Back to List</a>
    </div>*@

        @*@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
    *@
    </div>
}


