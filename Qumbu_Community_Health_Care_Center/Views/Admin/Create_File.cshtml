@{
    Layout = "_Landing2";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/StyleSheet/Workshop_StyleSheet.css">


</head>

<body>
    <!-- Section 1-->
    <div class="container mt-4">

        <h3>CREATE FILE</h3>
        <div class="card">
            <div class="card-header">
                <h4>Patient Card</h4>
            </div>
            <div class="card-header bg-secondary opacity-25">
                <h5 class="card-header">Personal Details</h5>
            </div>
            <div class="card-body">
                <div class="row">

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="memberName">Identity Number</label>
                            <input type="text" class="form-control" id="memberName" placeholder="Enter Patient Identy Number">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="validityPeriod">Gender</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="validityPeriod" placeholder="Select Gender"
                                       readonly>
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-toggle="dropdown"
                                            aria-haspopup="true" aria-expanded="false"></button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="#">Male</a>
                                        <a class="dropdown-item" href="#">Female</a>
                                        <!-- Add more options as needed -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="dateOfBirth">Date of Birth:</label>
                            <input type="date" class="form-control" id="dateOfBirth">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="validityPeriod">Personal Details</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="validityPeriod" placeholder="Select Marital Status"
                                       readonly>
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-toggle="dropdown"
                                            aria-haspopup="true" aria-expanded="false"></button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="#">Single</a>
                                        <a class="dropdown-item" href="#">Married</a>
                                        <a class="dropdown-item" href="#">Devorced</a>
                                        <a class="dropdown-item" href="#">Widowed/widower</a>
                                        <a class="dropdown-item" href="#">Other</a>
                                        <!-- Add more options as needed -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>

    </div>
    <!-- Section 2-->
    <div class="container mt-4">
        <div class="card">
            <div class="card-header  bg-secondary">
                <h5 >Home Address</h5>
            </div>
            <div class="card-body">
                <div class="row">

                    <div class="col-md-8">
                        <div class="form-group">
                            <label for="address">Address:</label>
                            <textarea class="form-control" id="address" rows="4" placeholder="Enter Address"></textarea>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="validityPeriod">Province</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="validityPeriod" placeholder="Select Province"
                                       readonly>
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-toggle="dropdown"
                                            aria-haspopup="true" aria-expanded="false"></button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="#">Eastern Cape</a>
                                        <a class="dropdown-item" href="#">Mpumalanga</a>
                                        <a class="dropdown-item" href="#">Gauteng</a>
                                        <a class="dropdown-item" href="#">Free State</a>
                                        <a class="dropdown-item" href="#">North West</a>
                                        <a class="dropdown-item" href="#">Kwazulu-Natal</a>
                                        <a class="dropdown-item" href="#">Western Cape</a>
                                        <a class="dropdown-item" href="#">Northern Cape</a>
                                        <a class="dropdown-item" href="#">Limpopo</a>
                                        <!-- Add more options as needed -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="validityPeriod">Race</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="validityPeriod" placeholder="Select Race"
                                       readonly>
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-toggle="dropdown"
                                            aria-haspopup="true" aria-expanded="false"></button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="#">Black</a>
                                        <a class="dropdown-item" href="#">White</a>
                                        <a class="dropdown-item" href="#">Indian</a>
                                        <a class="dropdown-item" href="#">Colored</a>
                                        <a class="dropdown-item" href="#">Mixed Raced</a>
                                        <a class="dropdown-item" href="#">Otherl</a>
                                        <!-- Add more options as needed -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Add more rows (sections) as needed -->
            </div>

        </div>
    </div>
    <!-- Section 3-->
    <div class="container mt-4">
        <div class="card">
            <div class="card-header  bg-secondary">
                <h5 >Next of Kin</h5>
            </div>
            <div class="card-body">
                <div class="row">

                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="memberName">Name</label>
                            <input type="text" class="form-control" id="memberName" placeholder="Enter Next of Kin Name">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="memberName">Surnamer</label>
                            <input type="text" class="form-control" id="memberName" placeholder="Enter Next of Kin Surname">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="memberName">Cellphone Number</label>
                            <input type="text" class="form-control" id="memberName" placeholder="Enter Next of Kin Cellphone Number">
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="address">Address:</label>
                            <textarea class="form-control" id="address" rows="4" placeholder="Enter Next of Kin Address"></textarea>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="validityPeriod">Province</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="validityPeriod" placeholder="Select Next of Kin Province"
                                       readonly>
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-toggle="dropdown"
                                            aria-haspopup="true" aria-expanded="false"></button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="#">Eastern Cape</a>
                                        <a class="dropdown-item" href="#">Mpumalanga</a>
                                        <a class="dropdown-item" href="#">Gauteng</a>
                                        <a class="dropdown-item" href="#">Free State</a>
                                        <a class="dropdown-item" href="#">North West</a>
                                        <a class="dropdown-item" href="#">Kwazulu-Natal</a>
                                        <a class="dropdown-item" href="#">Western Cape</a>
                                        <a class="dropdown-item" href="#">Northern Cape</a>
                                        <a class="dropdown-item" href="#">Limpopo</a>
                                        <!-- Add more options as needed -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Add more rows (sections) as needed -->
            </div>

        </div>
    </div>

    <!-- Bootstrap JS (Optional, only needed if you use Bootstrap's JavaScript components) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
