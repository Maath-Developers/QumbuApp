@{
    Layout = "_Walk-in-Layout";
}
<!DOCTYPE html>
<html>
<head>
    <title>Patient Medical Record - Vitals</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .vitals-form {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #f5f5f5;
        }

        .vitals-label {
            font-weight: bold;
        }
    </style>
</head>
<body>

    <div class="container mt-4">
        <h2 class="text-center">Patient Medical Record - Vitals</h2>

        <form class="vitals-form">
            <div class="form-group">
                <label class="vitals-label" for="temperature">Temperature:</label>
                <input type="text" class="form-control" id="temperature">
            </div>
            <div class="form-group">
                <label class="vitals-label" for="heartRate">Heart Rate:</label>
                <input type="text" class="form-control" id="heartRate">
            </div>
            <div class="form-group">
                <label class="vitals-label" for="bloodPressure">Blood Pressure:</label>
                <input type="text" class="form-control" id="bloodPressure">
            </div>
            <div class="form-group">
                <label class="vitals-label" for="respiratoryRate">Respiratory Rate:</label>
                <input type="text" class="form-control" id="respiratoryRate">
            </div>
            <div class="form-group">
                <label class="vitals-label" for="oxygenSaturation">Oxygen Saturation:</label>
                <input type="text" class="form-control" id="oxygenSaturation">
            </div>
            <div class="form-group">
                <label class="vitals-label" for="bloodSugar">Blood Sugar:</label>
                <input type="text" class="form-control" id="bloodSugar">
            </div>
            <div class="form-group">
                <label class="vitals-label" for="weight">Weight:</label>
                <input type="text" class="form-control" id="weight">
            </div>

            <div class="text-right">
                <button type="button" class="btn btn-success">Save</button>
            </div>
        </form>
    </div>

</body>
</html>
