@model Qumbu_Community_Health_Care_Center.Models.ScreeningTool
@{
    Layout = "Vaccs";
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Form</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <style>
    body {
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
    }

    .form-container {
      border: 4px double blue;
      padding: 20px;
      background-color: #cceeff;
      width: 100%;
      max-width: 800px;
    }

    .green-btn {
      background-color: green;
      color: white;
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="form-container">
          <h2 class="mb-4">Order your medicine here</h2>
          <div class="mb-3"></div> <!-- Empty space -->
          <div class="mb-4">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name">
          </div>
          <div class="mb-4">
            <label for="email">Email</label>
            <input type="text" class="form-control" id="email">
          </div>
          <div class="mb-4">
            <label for="phone">Phone</label>
            <input type="text" class="form-control" id="phone">
          </div>
          <h4>Address</h4>
          <div class="mb-3">
            <label for="streetAddress">Street Address</label>
            <input type="text" class="form-control" id="streetAddress">
          </div>
          <div class="mb-3">
            <label for="streetAddressLine2">Street Address Line 2</label>
            <input type="text" class="form-control" id="streetAddressLine2">
          </div>
          <div class="row mb-3">
            <div class="col-md-6">
              <label for="city">City</label>
              <input type="text" class="form-control" id="city">
            </div>
            <div class="col-md-6">
              <label for="zipCode">Zip Code</label>
              <input type="text" class="form-control" id="zipCode">
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-md-6">
              <label for="provinces">Provinces</label>
              <select class="form-select" id="provinces">
                <option>Province 1</option>
                <option>Province 2</option>
                <option>Province 3</option>
                <!-- Add more provinces here -->
              </select>
            </div>
            <div class="col-md-6">
              <label for="country">Country</label>
              <input type="text" class="form-control" id="country">
            </div>
          </div>
          <h4>Vaccinations</h4>
          <div class="row">
            <div class="col-md-4">
              <label>Name</label>
              <p>Pfizer</p>
              <p>Johnson & Johnson</p>
            </div>
            <div class="col-md-4">
              <label>Quantity</label>
              <select class="form-select">
                <option>1</option>
                <option>2</option>
                <!-- Add more options here -->
              </select>
              <select class="form-select mt-2">
                <option>1</option>
                <option>2</option>
                <!-- Add more options here -->
              </select>
            </div>
            <div class="col-md-4">
              <label>Price</label>
              <p>R1000,00</p>
              <p>R1000,00</p>
            </div>
          </div>
          <div class="row mt-4">
            <div class="col-md-6">
              <button class="btn green-btn">Order</button>
            </div>
            <div class="col-md-6">
              <label>Total</label>
              <output>...</output>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
