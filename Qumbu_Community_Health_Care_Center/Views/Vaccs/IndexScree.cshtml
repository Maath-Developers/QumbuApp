                    </div>
                    <div class="col-4">
                        <label asp-for="Question6"></label>
                        <input asp-for="Question6" class="form-control" />
                        <span asp-validation-for="Question6" class="text-danger"></span>
                    </div>

                    <div class="form-group row">
                        <div class="col-8 offset-2 row">
                            <div class="col">
                                <input type="submit" class="btn btn-info w-75 bi bi-arrow-left-circle" value="SUBMIT" />
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-danger w-75"><i class="bi bi-arrow-left-circle"></i>BACK</a>
                            </div>
                        </div>
                    </div>

               @*  </div> *@
            </div>
        </div>
       
    </div>
</form>
        </div>
    </div>

</div>


