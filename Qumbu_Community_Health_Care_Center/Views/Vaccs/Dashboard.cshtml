@{
    ViewData["Title"] = " Vaccination Dashaboard";
}
@{
    Layout = "Vaccs";
}
@using Microsoft.AspNetCore.Identity
@using Qumbu_Community_Health_Care_Center.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<style>
    .col-2 {
        background: rgba( 86, 89, 209, 0.2 );
        box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
        backdrop-filter: blur( 16.5px );
        -webkit-backdrop-filter: blur( 16.5px );
        border-radius: 10px;
        border: 1px solid rgba( 255, 255, 255, 0.18 );
        padding: 10px;
        text-align: center;
        margin-right: 10px; /* Add margin between div containers */
    }

        /* Remove right margin from the last .col-2 element */
        .col-2:last-child {
            margin-right: 0;
        }
</style>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" >
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.16.0/font/bootstrap-icons.css">
</head>

<div class="container mt-3">
    <div class="row">
    <div class="col-12">
