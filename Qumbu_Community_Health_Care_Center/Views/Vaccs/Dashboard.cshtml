                                        <img src="~/_Images//Vaccs/PReport.png" class="img-thumbnail" alt="#" />
                                    </div>
                                    <h5 class="card-title">REPORTS </h5>
                                    <div class="d-flex align-items-center">
                                        <span class="bi bi-file-earmark-person fs-1 me-3"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                   
           </div>
           
        }
