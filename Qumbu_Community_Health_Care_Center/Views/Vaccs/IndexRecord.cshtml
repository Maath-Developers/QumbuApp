@model IEnumerable<Qumbu_Community_Health_Care_Center.Models.Vaccine_MadicalRecord>


@if (User.IsInRole("Patient"))
{
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">List of your screenings</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Vaccs" asp-action="Record" class="btn btn-primary"><i class="bi bi-plus-circle"></i> SCREEN YOURSELF</a>
            </div>
        </div>
        <br />
        @if (Model.Count() > 0)
        {
            @*<table class="table table-bordered table-striped" style="width:100%">*@
            <table class="table table-info table-hover">

                <thead>
                    <tr>
                        <th>
                            Patient
                        </th>
                        <th>
                            BloodPressure
                        </th>
                        <th>
                            Temperature
                        </th>
                        <th>
                            HeartRate
                        </th>
                        <th>
                            Date
                        </th>
                        <th>
                            Weight
                        </th>
                        <th>
                            dose1
                        </th>
                        <th>
                            dose2
                        </th>
                        <th>
                            dose2
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var reco in Model)
                    {
                        <tr>
                            <td width="20%">@reco.Patient</td>
                            <td width="20%">@reco.BloodPressure</td>
                            <td width="20%">@reco.Temperature</td>
                            <td width="20%">@reco.HeartRate</td>
                            <td width="20%">@reco.Date</td>
                            <td width="20%">@reco.Weight</td>
                            <td width="20%">@reco.dose1</td>
                            <td width="20%">@reco.dose2</td>
                            <td width="20%">@reco.dose3</td>

                            <td>
                                <a asp-controller="Vaccs" asp-action="Update" asp-route-ID="@reco.RecordID" class="btn btn-primary"><i class="bi bi-arrow-repeat"></i>Update</a>

                                <a asp-controller="Vaccs" asp-action="Delete" asp-route-ID="@reco.RecordID" class="btn btn-danger">
                                    <i class="bi bi-trash3-fill"></i>Delete
                                </a>

                            </td>

                        </tr>
                    }
                </tbody>
            </table>

        }
        else
        {
            <p>No Avatars created yet</p>
        }

    </div>
}
