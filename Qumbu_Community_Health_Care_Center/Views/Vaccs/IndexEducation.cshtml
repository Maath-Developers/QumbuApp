@model IEnumerable<Qumbu_Community_Health_Care_Center.Models.VaccinationEducation>


@if (User.IsInRole("Patient"))
{
}

<div class="container p-3">
    <div class="row pt-4">
        @* <div class="col-6">
            <h2 class="text-primary">Learn More About Vaccination</h2>
        </div> *@
        <div class="col-6 text-end">
            <a asp-controller="Vaccs" asp-action="Education" class="btn btn-primary"><i class="bi bi-plus-circle"></i>LEARN ABOUT VACCINATION</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        @*<table class="table table-bordered table-striped" style="width:100%">*@
        <table class="table table-info table-hover">

            <thead>
                <tr>
                    <th>
                        Vaccine1
                    </th>
                    <th>
                        Vaccine2
                    </th>
                    <th>
                        Vaccine3
                    </th>
                    <th>
                        Vaccine4
                    </th>
                    <th>
                        Description1
                    </th>
                    <th>
                        Description2
                    </th>
                    <th>
                        Description3
                    </th>
                    <th>
                        Description4
                    </th>
                    <th>
                        Purpose1
                    </th>
                    <th>
                        Purpose2
                    </th>
                    <th>
                        Purpose3
                    </th>
                    <th>
                        Purpose4
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var Edu in Model)
                {
                    <tr>
                        <td width="20%">@Edu.Vaccine1</td>
                        <td width="20%">@Edu.Vaccine2</td>
                        <td width="20%">@Edu.Vaccine3</td>
                        <td width="20%">@Edu.Vaccine4</td>
                        <td width="20%">@Edu.Description1</td>
                        <td width="20%">@Edu.Description2</td>
                        <td width="20%">@Edu.Description3</td>
                        <td width="20%">@Edu.Description4</td>
                        <td width="20%">@Edu.Purpose1</td>
                        <td width="20%">@Edu.Purpose2</td>
                        <td width="20%">@Edu.Purpose3</td>
                        <td width="20%">@Edu.Purpose4</td>
                        
                       

                        <td>

                            else
                            {
                            <a asp-controller="Vaccs" asp-action="Update" asp-route-ID="@Edu.EducationID" class="btn btn-primary"><i class="bi bi-arrow-repeat"></i>Update</a>

                            <a asp-controller="Vaccs" asp-action="Delete" asp-route-ID="@Edu.EducationID" class="btn btn-danger">
                                <i class="bi bi-trash3-fill"></i>Delete
                            </a>

                            }

                        </td>

                    </tr>
                }
            </tbody>
        </table>

    }
   @*  else
    {
        <p>No Avatars created yet</p>
    } *@

</div>
