@model IEnumerable<Qumbu_Community_Health_Care_Center.Models.Appointment>
@*@{
    Layout = "_CounsellorLayout";
}*@
<span class="border border-4">
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">List of Appointments</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-controller="Counseller" asp-action="Create" class="btn btn-primary">Create New Appointment</a>
            </div>
            <div class="col-6 text-left">
                <a asp-controller="Counseller" asp-action="Patient" class="btn btn-primary">Go Back</a>
            </div>
        </div>
        <br />

        @if (Model.Count() > 0)
        {

            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            FirstName
                        </th>
                        <th>
                            Date
                        </th>
                        <th>
                            Time
                        </th>
                        <th>
                            LastName
                        </th>
                        <th>
                            Purpose
                        </th>
                        <th>
                            Cancel
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var app in Model)
                    {
                        <tr>
                            <td width="20%">@app.FirstName</td>
                            <td width="20%">@app.Date</td>
                            <td width="20%">@app.Time</td>
                            <td width="20%">@app.LastName</td>
                            <td width="20%">@app.Purpose</td>
                            <td>
                                <div class="w-50 btn-group" role="group">
                                    <a asp-controller="Counseller" asp-action="Delete" asp-route-ID="@app.AppointmentID" class="btn btn-danger mx-1">Delete</a>
                                </div>
                            </td>
                        </tr>


                    }
                </tbody>
            </table>

        }
        else
        {
            <p>No Appointments added yet</p>
        }

    </div>
</span>





