@model Qumbu_Community_Health_Care_Center.Models.FamilyReg;
@{
	ViewData["Title"] = "CreateFamilyReg";
	Layout = "~/Views/Shared/_FamilyPlanLayout.cshtml";
}
<form method="post" asp-action="CreateFamilyReg">
	<div class="border border-3 border-info p-3">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		
		<div class="card m-4 align-content-center">
			<div class="form-group row">
				<h2 class="text-black-50 pe-lg-5 text-center">Let's have a chat!! <a href="index.html"><img class="img-responsive" width="100" height="100" src="~/_Images/FamilyReg.png" alt="#" /></a></h2>
			</div>
		
			<div class="row ">

				<div class="col-12 ">
					<div class="form-group">
						<div class="col-4 ">
							<label asp-for="Description"></label>
							<input asp-for="Description" class="form-control" />
							<span asp-validation-for="Description" class="text-danger"></span>
						</div>
						<div class="col-4">
							<label asp-for="Descriptions"></label>
							<input asp-for="Descriptions" class="form-control" />
							<span asp-validation-for="Descriptions" class="text-danger"></span>
						</div>
						<div class="col-4">
							<label asp-for="expectection"></label>
							<select id="Dropdown" asp-for="expectection" class="form-control" itemid="validationtype" required>
								<option value="Yes">Yes</option>
								<option value="No">No</option>
							</select>
							<span asp-validation-for="expectection" class="text-danger"></span>
						</div>
						<div class="col-4">
							<label asp-for=" experience"></label>
							<select id="Dropdown" asp-for="experience" class="form-control" itemid="validationtype" required>
								<option value="Yes">Yes</option>
								<option value="No">No</option>
							</select>
							<span asp-validation-for=" experience" class="text-danger"></span>
						</div>
						<div class="col-4">
							<label asp-for="type"></label>
							<select id="dropdown" asp-for="type" class="form-control" itemid="validationtype" required>
								<option value="Pills">Pills</option>
								<option value="Injection">Injection</option>
								<option value="Loop">Loop</option>
								<option value="Implant">Implant</option>
								<option value="Condoms">Condoms</option>
								<option value="Vigina Ring">Vigina Ring</option>
							</select>
							<span asp-validation-for="type" class="text-danger"></span>
						</div>
					</div>
					<br />
					<br />
					<div class="form-group row">
						<div class="col-8 offset-2 row">
							<div class="col">
								<input type="submit" class="btn btn-outline-info w-25" value="Submit" />
							</div>
							<div class="col">
								<a asp-action="ViewFamilyReg" class="btn btn-outline-info w-25">View</a>
							</div>
						</div>
					</div>
					<br />
					<br />
				</div>
			</div>
		</div>
	</div>
</form>

