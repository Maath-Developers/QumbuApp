@model Qumbu_Community_Health_Care_Center.Models.FamilyReg;
@{
	ViewData["Title"] = "CreateFamilyReg";
	Layout = "~/Views/Shared/_FamilyPlanLayout.cshtml";
}
<div class="bg-info p-3 mb-2">
	<h4 class="text-white text-center ">
		Scren
	</h4>
</div>
<br/>
<div class="row">
	<div class="col-md-4">  
		<form method="post" asp-action="CreateFamilyReg">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="col-6">
				<div class="form-group">
					<label asp-for="intercourse"></label>
					<select id="Dropdown" asp-for="intercourse" class="form-control" itemid="validationtype" required>
						<option value="Days">2/3 days back</option>
						<option value="1 week">A Week</option>
						<option value="2 weeks">2 Weeks back</option>
						<option value="Month">Been Month</option>

					</select>
					<span asp-validation-for="intercourse" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="period"></label>
					<select id="Dropdown" asp-for="intercourse" class="form-control" itemid="validationtype" required>
						<option value="Days">2/3 days back</option>
						<option value="1 week">A Week</option>
						<option value="2 weeks">2 Weeks back</option>
						<option value="Month">Been Month</option>

					</select>
					<span asp-validation-for="period" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="child"></label>
					<select id="Dropdown" asp-for="child" class="form-control" itemid="validationtype" required>
						<option value="Yes">Yes</option>
						<option value="No">No</option>
					</select>
					<span asp-validation-for="child" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="experience"></label>
					<select id="Dropdown" asp-for="experience" class="form-control" itemid="validationtype" required>
						<option value="Yes">Yes</option>
						<option value="No">No</option>
					</select>
					<span asp-validation-for="experience" class="text-danger"></span>
				</div>
			</div>
			<div class="col-6">
				
				<div class="form-group">
					<label asp-for="allaegies"></label>
					<select id="Dropdown" asp-for="allaegies" class="form-control" itemid="validationtype" required>
						<option value="Yes">Yes</option>
						<option value="No">No</option>
					</select>
					<span asp-validation-for="allaegies" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="medication"></label>
					<select id="Dropdown" asp-for="medication" class="form-control" itemid="validationtype" required>
						<option value="Yes">Yes</option>
						<option value="No">No</option>
					</select>
					<span asp-validation-for="medication" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="contraceptives"></label>
					<select id="Dropdown" asp-for="contraceptives" class="form-control" itemid="validationtype" required>
						<option value="Yes">Yes</option>
						<option value="No">No</option>
					</select>
					<span asp-validation-for="contraceptives" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="type"></label>
					<select id="Dropdown" asp-for="type" class="form-control" itemid="validationtype" required>
						<option value="Yes">Yes</option>
						<option value="No">No</option>
					</select>
					<span asp-validation-for="type" class="text-danger"></span>
				</div>
				<br />
				<br />
				<div class="form-group row">
					<div class="col-8 offset-2 row">
						<div class="col">
							<input type="submit" class="btn btn-outline-info w-25" value="Screen" />
						</div>
						<div class="col">
							<a asp-action="ViewFamilyReg" class="btn btn-outline-info w-25">View</a>
						</div>
					</div>
				</div>

			</div>
		</form>
	</div>
</div>


