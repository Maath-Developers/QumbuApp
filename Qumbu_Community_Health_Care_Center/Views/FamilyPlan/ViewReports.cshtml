
@{
    ViewData["Title"] = "ViewReports";
    Layout = "~/Views/Shared/_FamilyPlanLayout.cshtml";
}


<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Form</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .form-container {
            border: 4px double blue;
            padding: 20px;
            background-color: #cceeff;
            width: 100%;
            max-width: 1000px;
        }

        .green-btn {
            background-color: green;
            color: white;
        }

        .logo {
            display: block;
            margin: 0 auto;
            max-width: 100%;
            height: auto;
        }

        .heading-line {
            border-bottom: 1px solid black;
            width: 100%;
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .record-label {
            font-weight: bold;
        }

        .heading {
            text-align: left;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="form-container">
                    <div class="row align-content-center">
                        <div class="logo_section">
                            <a href="index.html"><img class="img-responsive" src="~/_Images/1.png" alt="#" style="height:150px; width:stretch"/></a>
                        </div>
                    </div>

                    <div class="mt-4"></div> <!-- Empty space -->
                    <div class="row">
                        <div class="col-md-2">
                            <h4 class="heading">Patient Name</h4>
                        </div>
                        <div class="col-md-2">
                            <h4 class="heading">Birth Control Method</h4>
                        </div>
                        <div class="col-md-2">
                            <h4 class="heading">Visited Date</h4>
                        </div>
                        <div class="col-md-2">
                            <h4 class="heading">Returning Date</h4>
                        </div>
                        <div class="col-md-2">
                            <h4 class="heading">Status</h4>
                        </div>
                    </div>
                    <hr class="heading-line">
                    <div class="row mt-4">
                        <div class="col-md-2">
                            <p class="record-label">Lam Kili</p>
                        </div>
                        <div class="col-md-2">
                            <p class="record-label">Injection</p>
                        </div>
                        <div class="col-md-2">
                            <p class="record-label">23/08/2023</p>
                        </div>
                        <div class="col-md-2">
                            <p class="record-label">24/09/2023</p>
                        </div>
                        <div class="col-md-2">
                            <p class="record-label">Prescribed</p>
                        </div>
                    </div>
                    <!-- Add more records here -->
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <div class="row mt-6 mb-6">
                        <div class="col-md-12 text-end">
                            <button class="btn green-btn">Order</button>
                            <a href="javascript:window.print()" class="btn btn-success">Print</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

