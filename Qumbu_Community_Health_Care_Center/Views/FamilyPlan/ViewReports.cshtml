@{
    ViewData["Title"] = "ViewReports";
    Layout = "~/Views/Shared/_FamilyPlanLayout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vaccination Card</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .form-container {
            border: 4px double white;
            padding: 20px;
            background-color: white;
            width: 100%;
            max-width: 800px;
        }

        .logo {
            width: 60px;
            height: 60px;
            background-color: red;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 50%;
            color: white;
        }

        .vaccine-heading {
            display: inline-block;
            vertical-align: middle;
            margin-left: 10px;
        }

        .sub-heading {
            font-size: 20px;
            margin-top: 20px;
        }

        .wide-row {
            height: 3em;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-start">
            <div class="col-md-12">
                <div class="form-container">
                    <div class="p_info_image">
                        <img src="~/_Images/Report1.png" class="img-thumbnail" alt="#" />
                        <i class="bi bi-plus-lg"></i>
                    </div>
                    <h2 class="text-black-50 pl-3 text-center">Family Planning Card</h2>
                    <h3 class="sub-heading  text-center">Patient  Details</h3>
                    <table class="table mt-3">
