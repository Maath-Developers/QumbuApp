
@{
    ViewData["Title"] = "ViewAppointment";
    Layout = "~/Views/Shared/_FamilyPlanLayout.cshtml";
}

@model IEnumerable<Qumbu_Community_Health_Care_Center.Models.Appointment>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List of Appointments</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="FamilyPlan" asp-action="CreateAppointment" class="btn btn-primary">Create New</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {

        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    
                    <th>
                        Date
                    </th>
                    <th>
                        Time
                    </th>
                    <th>
                       Note
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var app in Model)
                {
                    <tr>
                       
                        <td width="30%">@app.Date</td>
                        <td width="30%">@app.Time</td>
                        <td width="30%">@app.Notes</td>
                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <p>No Appointments added yet</p>
    }

</div>