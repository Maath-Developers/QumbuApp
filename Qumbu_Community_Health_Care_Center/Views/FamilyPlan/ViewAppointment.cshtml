
@{
    ViewData["Title"] = "ViewAppointment";
    Layout = "~/Views/Shared/_FamilyPlanLayout.cshtml";
}

@model IEnumerable<Qumbu_Community_Health_Care_Center.Models.Appointment>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List of Appointments</h2>
        </div>
        <div class="col-6 text-right  d-grid gap-2 d-md-flex justify-content-md-end">
            <a asp-controller="FamilyPlan" asp-action="CreateAppointment" class="btn btn-primary">Create New</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {

        <table class="table  table-active table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    
                    <th>
                        FirstName
                    </th>
                    <th>
                        LastName
                    </th>
                    <th>
                        Date
                    </th>
                    <th>
                        Time
                    </th>
                    @*<th>
                       Note
                    </th*@@*>*@
                </tr>
            </thead>

            <tbody>
                @foreach (var app in Model)
                {
                    <tr>
                       
                        <td width="30%">@app.FirstName</td>
                        <td width="30%">@app.LastName</td>
                        <td width="30%">@app.Date</td>
                        <td width="30%">@app.Time</td>
                        <td>
                            <div class="w-100 btn-group" role="group">

                                <a asp-controller="FamalyPlan" asp-action="DeleteAppointment" asp-route-ID="@app.AppointmentId" class="btn btn-danger ">Cancel</a>
                            </div>
                        </td>
                    </tr>

                }
            </tbody>
        </table>

    }
    else
    {
        <p>No Appointments added yet</p>
    }

</div>