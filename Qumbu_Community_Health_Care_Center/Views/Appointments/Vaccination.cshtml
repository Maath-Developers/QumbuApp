@model IEnumerable<Qumbu_Community_Health_Care_Center.Models.Appointment>

@{
    ViewData["Title"] = "Vaccination";
    Layout = "~/Views/Shared/Vaccs.cshtml";
}

<div id="Header" class="bg-info">
    <h2 class="m-1 pt-4 text-center text-white">Patient Profiling</h2>
</div>

<table id="myTable" class="table">
    <thead>
        <tr>
            <th>
                Patient Information
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date_Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Purpose)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.MainUser.FirstName @item.MainUser.LastName
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date_Time)
                </td>
                @* <td>
            @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Purpose)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @if (item.Status == "New")
                    {
                        <div class="col">
                            <a asp-action="CreatePat" class="btn btn-outline-info w-75">View</a>
                        </div>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

