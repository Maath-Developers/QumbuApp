@model Qumbu_Community_Health_Care_Center.Models.Appointment
@using Qumbu_Community_Health_Care_Center.Models
@using Microsoft.AspNetCore.Identity
@using Qumbu_Community_Health_Care_Center.Areas.Identity.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "PrenatalCare";
    Layout = "~/Views/Shared/_LayoutPrenatal.cshtml";
}

<div class="container-fluid">
        <h4>List of Pre-Natal Appointments</h4>
        <br />
        <div class="row">
            <table class="table table-bordered table-striped table-sm" style="width:100%">
                <thead class="table-primary">
                    <tr>
                        <th>
                            Patient Name
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedAt)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Date_Time)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Purpose)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Appointment app in ViewBag.App)
                    {
                        <tr>
                            <td width="15%">
                                @foreach (ApplicationUser user in ViewBag.Patient)
                                {
                                    <option value="@user.Id">@user.FirstName @user.LastName</option>
                                }
                            </td>
                            <td width="20%">@app.CreatedAt</td>
                            <td width="15%">@app.Date_Time</td>
                            <td width="15%">@app.Purpose</td>
                            <td width="7%">@app.Status</td>
                            <td width="23%">
                                <button class="btn-outline-primary">
                                    <a asp-controller="" asp-action="Details" asp-route-id="@app.AppointmentID">Accept</a>
                                </button>
                                <button class="btn-outline-primary">
                                    <a asp-controller="" asp-action="Details" asp-route-id="@app.AppointmentID">Delay</a>
                                </button>
                                <button class="btn-outline-primary">
                                    <a asp-controller="" asp-action="Delete" asp-route-id="@app.AppointmentID">Delete</a>
                                </button>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>




   
</div>
