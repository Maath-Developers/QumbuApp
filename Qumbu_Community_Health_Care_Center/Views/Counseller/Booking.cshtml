@model IEnumerable<Qumbu_Community_Health_Care_Center.Models.Bookings>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List of Appointments</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Counseller" asp-action="Create" class="btn btn-primary">Create New Appointment</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {

        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Date
                    </th>
                    <th>
                        Time
                    </th>
                    <th>
                        Contact
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var hero in Model)
                {
                    <tr>
                        <td width="30%">@hero.Name</td>
                        <td width="30%">@hero.Date</td>
                        <td width="30%">@hero.Time</td> 
                        <td width="30%">@hero.Contact</td>
                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <p>No Appointments added yet</p>
    }

</div>





