@model Qumbu_Community_Health_Care_Center.Models.Profiling
@{
    Layout = "_CounsellorLayout";
}
<div id="Header" class="bg-info">
    <h2 class="m-1 pt-4 text-center text-white">Group Counselling</h2>
</div>
<div class="container-fluid bg-white">
    <form method="post" asp-action="CreateG">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="validityPeriod">First Name</label>
                            <select id="GenderDropdown" asp-for="FirstName" class="form-control" id="validationName" required>
                                <option value="Select" class="bg-opacity-50">Select</option>
                                <option value="Male">Unako</option>
                                <option value="Female">Liso</option>
                            </select>
                        </div>
                        <br />
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Remove" />
                        </div>
                      
                    </div>
                   
                    <div class="col">
                        <input type="submit" class="btn btn-info w-70" value="Add" />
                    </div>
                </div>
                <br />
                <div class="row">

                    <div class="col-md-8">
                        <div class="col-10">
                            <label asp-for="Background"></label>
                            <textarea class="form-control" rows="6" id="Background" name="Background"></textarea>
                            <span asp-validation-for="Background" class="text-danger"></span>
                        </div>
                        <div class="col-8">
                            <label asp-for="CounsellingPlan"></label>
                        </div>
                        <div class="col-md-8">
                            <div class="form-group">
                                <label for="validityPeriod">(a) Counselling Approaches</label>
                                <select id="CounsellingApproach" asp-for="CounsellingApproach" class="form-control" id="validationName" required>
                                    <option value="Select" class="bg-opacity-50">Select</option>
                                    <option value="Behavior">Behavior Counselling</option>
                                    <option value="Cognitive">Cognitive Counselling</option>
                                    <option value="Educational">Educational Counselling</option>
                                    <option value="Holistic">Holistic Counselling</option>
                                    <option value="MentalHealth">Mental Health Counselling</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-10">
                            <label asp-for="Goals"></label>
                            <textarea class="form-control" rows="6" id="Goals" name="Goals"></textarea>
                            <span asp-validation-for="Goals" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="col-10">
                            <label asp-for="comments"></label>
                            <textarea class="form-control" rows="6" id="comments" name="comments"></textarea>
                            <span asp-validation-for="comments" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="col-10">
                            <label asp-for="recom"></label>
                            <textarea class="form-control" rows="6" id="recom" name="recom"></textarea>
                            <span asp-validation-for="recom" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-6 offset-2 row">
                    <div class="col">
                        <input type="submit" class="btn btn-info w-75" value="Submit" />
                    </div>
                    <div class="col">
                        <a asp-action="CreateRe" class="btn btn-info w-75">Cancel</a>
                    </div>
                </div>
            </div>
    </form>
</div>


