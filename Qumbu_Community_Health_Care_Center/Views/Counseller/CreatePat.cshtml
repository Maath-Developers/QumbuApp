@model Qumbu_Community_Health_Care_Center.Models.Profiling
@{
	Layout = "_CounsellorLayout";
}
<div class="mt-4 p-4 bg-white text-center text-white-50 rounded">
	<h2>Patient Details</h2>
</div>
	<form method="post" asp-action="Create">
		<div class="border p-5">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="row">
			<div class="card" style="width: 18rem; height: 250px">
				<img class="img-responsive rounded-circle" width="210" height="2121qqqa098o090-[90909090" src="~/images/Profile-Photo.png" alt="#" />
			</div>
			<div class="card" style="width: 18rem; height: 250px">
				<div class="col-md-3">
					<div class="form-group">
						<label for="memberName">Counselling Remarks:</label>
						@*<input type="text" class="form-control" id="memberName" placeholder=" ">*@
					</div>
					
					<div class="form-group row">
						<div class="col-4 offset-2 row">
							<div class="col">
								<a asp-action="CreateConf" class="btn btn-info w-60">View History</a>
							</div>
							<br />
							<div class="col">
								<a asp-action="CreateRe" class="btn btn-info w-60">Start Counselling</a>
							</div>
						</div>
					</div>
				</div>
			</div>
			</div>
			<br />
			<div class="row">
				<div class="col-12">
					<div class="form-group">
						<div class="col-md-3">
							<div class="form-group">
								<label for="validityPeriod">Purpose:</label>
								<select id="VisitPurpose" asp-for="VisitPurpose" class="form-control" id="validationName" required>
									<option value="Select" class="bg-opacity-50">Select</option>
									<option value="e">Excuse Letter</option>
									<option value="c">Clearance</option>
								</select>
							</div>
						</div>
					</div>
				</div>
				<div class="col-12">
					<div class="form-group">
						<div class="col-md-3">
							<div class="form-group">
								<label for="validityPeriod">First Name:</label>
								<select id="FirstName" asp-for="FirstName" class="form-control" id="validationName" required>
									<option value="Select" class="bg-opacity-50">Select</option>
									<option value="e">Unako</option>
									<option value="c">Liso</option>
								</select>
							</div>
						</div>
					</div>
				</div>
				<div class="col-4">
					<label asp-for="Date"></label>
					<input asp-for="Date" class="form-control" />
					<span asp-validation-for="Date" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-4 offset-2 row">
					<div class="col">
					<a asp-action="VisitRec" class="btn btn-info w-75">Submit</a>
					</div>
					<div class="col">
						<a asp-action="Profile" class="btn btn-info w-75">Cancel</a>
					</div>
				</div>
			</div>
			@*<a href="path-to-your-file.zip" download="your-file-name.zip">
				<button>Download</button>
			</a>*@
		</div>
	</form>

