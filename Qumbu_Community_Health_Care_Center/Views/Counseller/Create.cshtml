@model Qumbu_Community_Health_Care_Center.Models.Bookings


	<form method="post" asp-action="Create">
		<div class="border p-3">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group row">
				<h2 class="text-black-50 pl-3">Add a new appointment</h2>
			</div>
			<div class="row">
				<div class="col-12">
					<div class="form-group">
						<div class="col-4">
							<label asp-for="Names"></label>
							<input asp-for="Names" class="form-control" />
							<span asp-validation-for="Names" class="text-danger"></span>
						</div>
						<div class="col-4">
							<label asp-for="Date"></label>
							<input asp-for="Date" class="form-control" />
							<span asp-validation-for="Date" class="text-danger"></span>
						</div>
						<div class="col-4">
							<label asp-for="Time"></label>
							<input asp-for="Time" class="form-control" />
							<span asp-validation-for="Time" class="text-danger"></span>
						</div>
						<div class="col-4">
							<label asp-for="Contact"></label>
							<input asp-for="Contact" class="form-control" />
							<span asp-validation-for="Contact" class="text-danger"></span>
						</div>
					</div>
					<div class="form-group row">
						<div class="col-8 offset-2 row">
							<div class="col">
								<input type="submit" class="btn btn-info w-75" value="Book Now" />
							</div>
							<div class="col">
								<a asp-action="Booking" class="btn btn-danger w-75">Back</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</form>
