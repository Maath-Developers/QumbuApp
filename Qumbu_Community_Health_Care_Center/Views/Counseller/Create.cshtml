@model Qumbu_Community_Health_Care_Center.Models.Bookings
@*@{
	Layout = "_CounsellorLayout";
}*@
<span class="border border-4">
	<form method="post" asp-action="Create">
		<div class="border p-3">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<br />
			<div class="form-group row">
				<h2 class="text-black-50 pl-3">Add a new appointment</h2>
			</div>
			<div class="row">
				<div class="col-12">
					<div class="form-group">
						<div class="col-4">
							<label asp-for="Names"></label>
							<input asp-for="Names" class="form-control" />
							<span asp-validation-for="Names" class="text-danger"></span>
						</div>
						<div class="col-4">
							<label asp-for="Date"></label>
							<input asp-for="Date" class="form-control" />
							<span asp-validation-for="Date" class="text-danger"></span>
						</div>
						<div class="col-4">
							<label asp-for="Time"></label>
							<input asp-for="Time" class="form-control" />
							<span asp-validation-for="Time" class="text-danger"></span>
						</div>
						<div class="col-4">
							<label asp-for="Contact"></label>
							<input asp-for="Contact" class="form-control" />
							<span asp-validation-for="Contact" class="text-danger"></span>
						</div>
					<div class="col-md-3">
						<div class="form-group">
							<label for="validityPeriod">Departments</label>
							<select id="GenderDropdown" asp-for="Departments" class="form-control" id="validationName" required>
								<option value="Select" class="bg-opacity-50">Select</option>
								<option value="Vac">Vaccination</option>
								<option value="Pre">Pre-Natal</option>
								<option value="Fam">Family Plan</option>
								<option value="Coun">Counselling</option>
							</select>
						</div>
					</div>
					</div>
					<div class="form-group row">
						<div class="col-4 offset-2 row">
							<div class="col">
								<input type="submit" class="btn btn-info w-75" value="Book Now" />
							</div>
							<div class="col">
								<a asp-action="Booking" class="btn btn-danger w-75">Back</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</form>
</span>
