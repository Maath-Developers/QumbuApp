@model IEnumerable<Qumbu_Community_Health_Care_Center.Models.Profiling>
@{
    Layout = "_CounsellorLayout";
}
<div class="mt-4 p-4 bg-white text-center text-white-50 rounded">
    <h2>Individual Counselling Records</h2>
</div>
<div class="container-fluid">
    <div class="row pt-4">
        <div class="col-6 text-right">
            <div class="search-container">
                <input type="text" id="search-input" placeholder="Search...">
                <button id="search-button">Search</button>
            </div>
            <div id="search-results">
                <!-- Display search results here -->
            </div>
            @* <a asp-controller="Counseller" asp-action="Create" class="btn btn-primary">Create New Appointment</a>*@
        </div>
        <br />
        @*<div class="col-6">
            <a asp-controller="Counseller" asp-action="CreateP" class="btn btn-info">Start Counselling</a>
        </div>*@
    </div>
    <br />
    <div class="col-6 text-left">
        <a asp-controller="Counseller" asp-action="CreateP" class="btn btn-info">Start Counselling</a>
    </div>

    @if (Model.Count() > 0)
    {

        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Background
                    </th>
                    <th>
                        CounsellingPlan
                    </th>
                    <th>
                        CounsellingApproach
                    </th>
                    <th>
                        Goals
                    </th>
                    <th>
                       comments
                    </th>
                    <th>
                        recom
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var pro in Model)
                {
                    <tr>
                        <td width="20%">@pro.Background</td>
                        <td width="20%">@pro.CounsellingPlan</td>
                        <td width="20%">@pro.CounsellingApproach</td>
                        <td width="20%">@pro.Goals</td>
                        <td width="20%">@pro.comments</td>
                        <td width="20%">@pro.recom</td>
                        <td>
                            <div class="w-50 btn-group" role="group">
                                <a asp-controller="Counseller" asp-action="Delete" asp-route-ID="@pro.ProfileID" class="btn btn-info mx-1">View</a>
                            </div>
                        </td>
                    </tr>


                }
            </tbody>
        </table>

    }
    else
    {
        <br />
        <p>Nothing to show yet</p>
    }

</div>








