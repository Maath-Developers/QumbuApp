@model IEnumerable<Qumbu_Community_Health_Care_Center.Models.PatientReg>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">You have the following form</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Counseller" asp-action="CreateRe" class="btn btn-primary">Fill in the form</a>
        </div>
        <div class="col-6 text-left">
            <a asp-controller="Counseller" asp-action="Counsellor" class="btn btn-primary">Go Back</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {

        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Names
                    </th>
                    <th>
                        DOB
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        Cell
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Gender
                    </th>
                    <th>
                        Province
                    </th>
                    <th>
                        Race
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Relationship
                    </th>
                    <th>
                        Cell
                    </th>
                    <th>
                        Reason
                    </th>
                    <th>
                        MentalHis
                    </th>
                    <th>
                        Background
                    </th>
                    <th>
                        Symptoms
                    </th>
                    <th>
                        Expectations
                    </th>
                    <th>
                        SocialInfo
                    </th>
                    <th>
                        Safety
                    </th> 
                    <th>
                        Consent
                    </th>
                    <th>
                        Sign
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var pa in Model)
                {
                    <tr>
                        <td width="30%">@pa.Names</td>
                        <td width="30%">@pa.DOB</td>
                        <td width="30%">@pa.Address</td>
                        <td width="30%">@pa.Cell</td>
                        <td width="30%">@pa.Email</td>
                        <td width="30%">@pa.Name</td>
                        <td width="30%">@pa.Relationship</td>
                        <td width="30%">@pa.Cell</td>
                        <td width="30%">@pa.Reason</td>
                        <td width="30%">@pa.MentalHis</td>
                        <td width="30%">@pa.Background</td>
                        <td width="30%">@pa.Symptoms</td>
                        <td width="30%">@pa.Expectations</td>
                        <td width="30%">@pa.SocialInfo</td>
                        <td width="30%">@pa.Safety</td>
                        <td width="30%">@pa.Consent</td>
                        <td width="30%">@pa.Sign</td>
                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <p>No record has been submitted added yet</p>
    }

</div>






