    @if (Model.Count() > 0)
    {

        <table id="myTable" table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        FirstName
                    </th>
                    <th>
                        LastName
                    </th>
                    <th>
                        Date
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var pro in Model)
                {
                    <tr>
                       @* <td width="20%">@pro.ID</td>*@
                        <td width="20%">@pro.FirstName</td>
                        <td width="20%">@pro.LastName</td>
                        <td width="20%">@pro.Date</td>
                        <td width="20%">@pro.Status</td>
                        <td>
                            <div class="w-50 btn-group" role="group">
                                <a asp-controller="Counseller" asp-action="Delete" asp-route-ID="@pro.ProfileID" class="btn btn-info mx-1">View</a>
                            </div>
                        </td>
                    </tr>


                }
            </tbody>
        </table>

    }
    else
    {
        <p>Nothing to show yet</p>
    }

</div>
