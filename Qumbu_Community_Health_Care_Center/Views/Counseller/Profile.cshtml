@model IEnumerable<Qumbu_Community_Health_Care_Center.Models.Profiling>
@{
    Layout = "_CounsellorLayout";
}
<div class="mt-2 p-2 bg-white text-center text-white-50 rounded">
    <h2>Patients Profile</h2>
</div>
    <div class="container-fluid">
        <div class="row pt-4">
           
            <div class="col-6 text-right">
                <div class="search-container">
                    <input type="text" id="search-input" placeholder="Search...">
                    <button id="search-button">Search</button>
                </div>
                <div id="search-results">
                    <!-- Display search results here -->
                </div>
               @* <a asp-controller="Counseller" asp-action="Create" class="btn btn-primary">Create New Appointment</a>*@
            </div>
            <br />
        <div class="col-10 text-right">
            <a asp-controller="Counseller" asp-action="CreateP" style="width:100%"></a>
        </div>
        <br />
            <div class="col-6 text-left">
                <a asp-controller="Counseller" asp-action="CreateP" class="btn btn-info">Add Patient</a>
            </div>
        </div>
        <br />

        @if (Model.Count() > 0)
        {

        <table id="Mytable" table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            FirstName
                        </th>
                        <th>
                            LastName
                        </th>
                        <th>
                            Date
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var pro in Model)
                    {
                        <tr>
                            <td width="20%">@pro.ID</td>
                            <td width="20%">@pro.FirstName</td>
                            <td width="20%">@pro.LastName</td> 
                            <td width="20%">@pro.Date</td> 
                            <td width="20%">@pro.Status</td>
                            <td>
                                <div class="w-50 btn-group" role="group">
                                    <a asp-controller="Counseller" asp-action="Delete" asp-route-ID="@pro.ProfileID" class="btn btn-info mx-1">View</a>
                                </div>
                                <div class="w-50 btn-group" role="group">
                                    <a asp-controller="Counseller" asp-action="Delete" asp-route-ID="@pro.ProfileID" class="btn btn-danger mx-1">Delete</a>
                                </div>
                            </td>
                        </tr>


                    }
                </tbody>
            </table>

        }
        else
        {
            <p>Nothing to show yet</p>
        }

    </div>






