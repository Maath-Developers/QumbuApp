@model IEnumerable<Qumbu_Community_Health_Care_Center.Models.Profiling>
@*@{
    Layout = "_CounsellorLayout";
}*@
<span class="border border-4">
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Patients Profile</h2>
            </div>
            <div class="col-6 text-right">
                <div class="search-container">
                    <input type="text" id="search-input" placeholder="Search...">
                    <button id="search-button">Search</button>
                </div>
                <div id="search-results">
                    <!-- Display search results here -->
                </div>
               @* <a asp-controller="Counseller" asp-action="Create" class="btn btn-primary">Create New Appointment</a>*@
            </div>
            <div class="col-6 text-left">
                <a asp-controller="Counseller" asp-action="CreateP" class="btn btn-primary">Add Patient</a>
            </div>
        </div>
        <br />

        @if (Model.Count() > 0)
        {

            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            email
                        </th>
                        <th>
                            Cell
                        </th>
                        <th>
                            FirstName
                        </th>
                        <th>
                            LastName
                        </th>
                        <th>
                            Date
                        </th>
                        <th>
                            Gender
                        </th>
                        <th>
                            DOB
                        </th><th>
                            Status
                        </th><th>
                            Address
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var pro in Model)
                    {
                        <tr>
                            <td width="20%">@pro.ID</td>
                            <td width="20%">@pro.email</td>
                            <td width="20%">@pro.Cell</td>
                            <td width="20%">@pro.FirstName</td>
                            <td width="20%">@pro.LastName</td> 
                            <td width="20%">@pro.Date</td> 
                            <td width="20%">@pro.Gender</td> 
                            <td width="20%">@pro.DOB</td> 
                            <td width="20%">@pro.Status</td>
                            <td width="20%">@pro.Address</td>
                            <td>
                                <div class="w-50 btn-group" role="group">
                                    <a asp-controller="Counseller" asp-action="Delete" asp-route-ID="@pro.ProfileID" class="btn btn-primary mx-1">View</a>
                                </div>
                            </td>
                        </tr>


                    }
                </tbody>
            </table>

        }
        else
        {
            <p>Nothing to show yet</p>
        }

    </div>
</span>

<!DOCTYPE html>
<html>
<head>

    <link rel="stylesheet" type="text/css" href="SearchStyle.css">
</head>
<body>
    <div class="search-container align-centre">
        <input type="text" id="search-input" placeholder="Search...">
        <button type="button" id="search-button">Search</button>
    </div>

    <div id="search-results">
    </div>

    <script src="script.js"></script>
</body>
</html>



