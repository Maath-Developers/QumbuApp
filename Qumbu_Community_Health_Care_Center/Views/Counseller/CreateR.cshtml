                                            <a class="dropdown-item" href="#">Free State</a>
                                            <a class="dropdown-item" href="#">North West</a>
                                            <a class="dropdown-item" href="#">Kwazulu-Natal</a>
                                            <a class="dropdown-item" href="#">Western Cape</a>
                                            <a class="dropdown-item" href="#">Northern Cape</a>
                                            <a class="dropdown-item" href="#">Limpopo</a>
                                          
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="validityPeriod">Relationship</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="validityPeriod" placeholder="Select relation"
                                       readonly>
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-toggle="dropdown"
                                            aria-haspopup="true" aria-expanded="false"></button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="#">Mother</a>
                                        <a class="dropdown-item" href="#">Father</a>
                                        <a class="dropdown-item" href="#">Brother</a>
                                        <a class="dropdown-item" href="#">Gaurdian</a>
                                        <a class="dropdown-item" href="#">Sister</a>
                                        <a class="dropdown-item" href="#">Other</a>
                                       
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-4">
        <div class="card">
            <div class="card-header bg-secondary">
                <h5 class="card-title">Health Information</h5>
            </div>
            <div class="card-body">
                <div class="row">

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="validityPeriod">Referral Source</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="validityPeriod" placeholder="Select source"
                                       readonly>
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-toggle="dropdown"
                                            aria-haspopup="true" aria-expanded="false"></button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="#">Friend</a>
                                        <a class="dropdown-item" href="#">Relative</a>
                                        <a class="dropdown-item" href="#">Teacher</a>
                                        <a class="dropdown-item" href="#">Nurse</a>
                                        <a class="dropdown-item" href="#">Other</a>
                                       
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="validityPeriod">Previous Counselling Experience</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="validityPeriod" placeholder="Select"
                                       readonly>
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-toggle="dropdown"
                                            aria-haspopup="true" aria-expanded="false"></button>
