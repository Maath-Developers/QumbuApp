    <!DOCTYPE html>
    <html>
    <head>
        <title>Appointment Booking</title>
        <style>
            /* CSS for the entire page */
            body {
                text-align: left;
                margin: 0; /* Remove default margin */
                /*padding: 20px;*/ /* Add some padding for spacing */
            }

            /* CSS for the heading */
            h1 {
                font-size: 30px;
            }
          
            /* CSS for the form labels */
            label {
                display: inline-block;
                width: 100px; /* Adjust the width for consistent alignment */
                font-size: 20px;
            }

            /* CSS for the form input fields */
            input {
                font-size: 20px;
                padding: 5px; /* Add padding for spacing */
                margin-bottom: 10px; /* Add margin for vertical spacing */
                width: 200px; /* Adjust the width as needed */
            }

                /* CSS for the form submit button */
                input[type="submit"] {
                    margin-top: 10px; /* Add margin above the button */
                }
        </style>
    </head>
    <body>
        <div class ="card-header bg-primary container-fluid">
            <h1>Appointment Booking</h1>
        </div>
        <br>
        @*<h1>Appointment Booking</h1>*@
        <form action="/bookings/create" method="post">
            <div class="form-container">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required>
            </div>

            <div class="form-container">
                <label for="date">Date:</label>
                <input type="date" id="date" name="date" required>
            </div>

            <div class="form-container">
                <label for="time">Time:</label>
                <input type="time" id="time" name="time" required>
            </div>

            <div class="form-container">
                <label for="contact">Contact:</label>
                <input type="text" id="contact" name="contact" required>
            </div>

            <input type="submit" value="Book Now">
        </form>
    </body>
    </html>



}
